{
  "name": "gql-server-demo",
  "packageManager": "yarn@3.4.1",
  "type": "module",
  "scripts": {
    "setup": "yarn prisma:generate && yarn codegen",
    "start:local": "nodemon --ext ts,sh,yml,prisma,graphql --exec node --experimental-specifier-resolution=node --loader ts-node/esm ./src/server.ts",
    "start:dev": "node --experimental-specifier-resolution=node --loader ts-node/esm ./src/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "codegen": "yarn codegen:schema && yarn codegen:types",
    "codegen:schema": "node --experimental-specifier-resolution=node --loader ts-node/esm src/graphql/codegen.ts",
    "codegen:types": "graphql-codegen --config codegen-types.yml",
    "prisma:pull": "yarn dlx prisma db pull",
    "prisma:generate": "yarn dlx prisma generate",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/server": "^4.3.2",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.17",
    "@prisma/client": "4.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.0.0",
    "@graphql-codegen/introspection": "3.0.0",
    "@graphql-codegen/schema-ast": "^3.0.0",
    "@graphql-codegen/typescript": "3.0.0",
    "@graphql-codegen/typescript-resolvers": "3.0.0",
    "@jest/globals": "^29.4.2",
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.21.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.4.2",
    "nodemon": "^2.0.20",
    "prisma": "4.10.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
