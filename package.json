{
  "name": "gql-server-demo",
  "packageManager": "yarn@3.4.1",
  "type": "module",
  "scripts": {
    "setup": "yarn prisma:generate && yarn codegen",
    "start:local": "nodemon --ext ts,sh,yml,prisma,graphql --exec node --experimental-specifier-resolution=node --loader ts-node/esm -r dotenv/config -r ./tracing.cjs ./src/server.ts",
    "start:dev": "node --experimental-specifier-resolution=node --loader ts-node/esm -r dotenv/config -r ./tracing.cjs./src/server.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "codegen": "yarn codegen:schema && yarn codegen:types",
    "codegen:schema": "node --experimental-specifier-resolution=node --loader ts-node/esm src/graphql/codegen.ts",
    "codegen:types": "graphql-codegen --config codegen-types.yml",
    "prisma:pull": "yarn dlx prisma db pull",
    "prisma:generate": "yarn dlx prisma generate",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/server": "^4.4.0",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.3.18",
    "@opentelemetry/api": "^1.4.0",
    "@opentelemetry/auto-instrumentations-node": "^0.36.3",
    "@opentelemetry/exporter-jaeger": "^1.9.1",
    "@opentelemetry/resource-detector-container": "^0.2.2",
    "@opentelemetry/resources": "^1.9.1",
    "@opentelemetry/sdk-node": "^0.35.1",
    "@opentelemetry/sdk-trace-base": "^1.9.1",
    "@opentelemetry/sdk-trace-node": "^1.9.1",
    "@prisma/client": "4.10.1",
    "@prisma/instrumentation": "^4.10.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.0.0",
    "@graphql-codegen/introspection": "3.0.0",
    "@graphql-codegen/schema-ast": "^3.0.0",
    "@graphql-codegen/typescript": "3.0.0",
    "@graphql-codegen/typescript-resolvers": "3.0.0",
    "@jest/globals": "^29.4.3",
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.21.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prisma": "4.10.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
